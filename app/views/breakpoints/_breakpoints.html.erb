<% if signed_in? && project.owner?(current_user) %>
  <% role = 'owner' %>
<% elsif signed_in? && project.backer?(current_user) %>
  <% role = 'backer' %>
<% elsif signed_in? %>
  <% role = 'user' %>
<% else %>
  <% role = 'guest' %>
<% end %>

<% project.breakpoints.each do |b| %>
  <%= render b, role: role %>
<% end %>
