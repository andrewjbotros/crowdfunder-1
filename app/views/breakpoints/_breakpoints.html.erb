<% if signed_in? && project.owner?(current_user) %>
  <% data = { role: 'owner' } %>
<% elsif signed_in? && project.backer?(current_user) %>
  <% data = { role: 'backer', pledge_id: project.which_pledge(current_user).id } %>
<% elsif signed_in? %>
  <% data = { role: 'user' } %>
<% else %>
  <% data = { role: 'guest' } %>
<% end %>

<% project.breakpoints.each do |b| %>
  <%= render b, data: data %>
<% end %>
