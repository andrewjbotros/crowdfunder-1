<%= form_for [@project, @breakpoint], html: { class: "form-container" } do |f| %>
  <legend class="title"><%= title %></legend>

  <%= render 'alerts/error_message', object: @breakpoint %>

  <div class="form-field">
    <%= f.label :amount, for: "breakpoint_amount", class: "form-label" %>
    <div class="form-control">
      <%= f.number_field :amount, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :description, for: "breakpoint_description", class: "form-label" %>
    <div class="form-control">
      <%= f.text_area :description, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <div class="form-label"></div>
    <div class="form-control">
      <%= f.submit submit, class: "form-submit" %>
    </div>
  </div>

<% end %>